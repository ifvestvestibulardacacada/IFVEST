<h1>Teste dos uploads</h1>

<form action="/revisao/upload" method="POST" id="uploadForm">
    <div class="input-group mb-3">
      <input type="file" class="form-control" id="inputGroupFile" name="file">
      <label class="input-group-text" for="inputGroupFile02">Upload</label>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

<!-- Button to open modal -->
<div class="mt-3">
    <button type="button" class="btn btn-outline-secondary" id="open-file-viewer-btn">Abrir visualizador de arquivos</button>
</div>

<!-- Include modal component -->
<%- include('./TESTE_view_upload') %>

<script>
    var modal_link = ""

    document.querySelector('#uploadForm').addEventListener('submit', function(event) {
        event.preventDefault(); // Impede o envio padrão do formulário

        const formData = new FormData(this);

        fetch('/revisao/upload', {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            modal_link = data
            alert('Upload realizado com sucesso! Link: ' + data);
        })
        .catch((error) => {
            console.error('Error:', error);
            alert('Erro ao realizar upload.');
        });
    });

    // Demo: abre o modal com um arquivo de teste quando o botão é clicado
    document.getElementById('open-file-viewer-btn').addEventListener('click', function(){
        openFileViewer(modal_link, modal_link.slice(17));
    });
</script>