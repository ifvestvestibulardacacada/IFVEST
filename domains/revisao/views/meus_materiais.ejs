<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meus Materiais - IFVest</title>
 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div class="container col-lg-10 mx-auto my-4">
        <% if (typeof errorMessage !== 'undefined' && errorMessage.trim()) { %>
            <script>
                window.onload = function () {
                    alert("<%= errorMessage %>");
                };
            </script>
        <% } %>
        <h1 class="border-bottom pb-2 mb-4">Materiais</h1>
        <form method="GET" class="mb-4 d-flex align-items-end gap-2">
            <div>
                <label for="materia" class="form-label">Buscar:</label>
                <input type="text" id="materia" name="materia" required class="form-control" maxlength="100">
            </div>
            <button type="button" class="btn btn-success"><i class="bi bi-search"></i> Pesquisar</button>
        </form>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% Conteudos.forEach(conteudo => { %>
                        <tr>
                            <td>
                                <span class="material-span" id="conteudo.id_conteudo">
                                    <%= conteudo.nome %>
                                </span>
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="/revisao/editar_material/<%= conteudo.id_conteudo %>"
                                       class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <a class="btn btn-outline-danger btn-sm" onclick="confirmDelete(<%= conteudo.id_conteudo %>)">
                                        <i class="bi bi-trash"></i> Excluir
                                    </a>
                                    <form id="deleteForm<%= conteudo.id_conteudo %>"
                                          action="/revisao/remover_material/<%= conteudo.id_conteudo %>?_method=DELETE"
                                          method="POST">
                                        <input type="hidden" name="_method" value="DELETE">
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <nav aria-label="Navegação">
            <ul class="pagination justify-content-center">
                <% if (page > 1) { %>
                    <li class="page-item"><a class="page-link" href="?page=1">Primeira</a></li>
                    <li class="page-item"><a class="page-link" href="?page=<%= page - 1 %>">Anterior</a></li>
                <% } %>
                <% for(let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= page == i ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>">
                            <%= i %>
                        </a>
                    </li>
                <% } %>
                <% if (page < totalPages) { %>
                    <li class="page-item"><a class="page-link" href="?page=<%= page + 1 %>">Próxima</a></li>
                    <li class="page-item"><a class="page-link" href="?page=<%= totalPages %>">Última</a></li>
                <% } %>
            </ul>
        </nav>
    </div>

    <script>
        function confirmDelete(conteudoId) {
            if (confirm("Tem certeza que deseja excluir este material?")) {
                document.getElementById("deleteForm" + conteudoId).submit();
            }
        }



    </script>

   
    <script src="/js/main.js"></script>
    <script src="/js/professor/meus_topicos.js"></script>
    <script src="/revisao/js/meus_materiais.js"></script>
</body>
</html>
