<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--========== BOX ICONS ==========-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">

    <!--========== CSS ==========-->
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/usuario/card.css">
    <link rel="stylesheet" href="/css/usuario/Botão.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/revisao/revisao_conteudo.css">
    <link rel="stylesheet" href="/revisao/css/revisao-card.css">

    <title><%= assunto.nome %> | Busca por Assunto - Módulo de Revisão de Conteúdo - IFVest</title>
</head>

<body>
    <main>
        <h1><%= assunto.nome %></h1>
        <h2><%= assunto.descricao %></h2>
        <div class="container">
            
            <div class="assunto-area">
                <h2>Assuntos</h2>
                <% listaAssuntos.forEach(assunto => { %>
                    <div class="revisao-card assunto-card">
                        <a href="/revisao/busca/<%= assunto.id_assunto %>"><%= assunto.nome %></a>
                    </div>
                <%})%>
            </div>
            <div class="material-area">
                <h2>Materiais</h2>
                <% listaMateriais.forEach(conteudo => { %>
                    <div class="revisao-card conteudo-card">
                        <a href="/revisao/busca/<%= conteudo.id_conteudo %>"><%= conteudo.nome %></a>
                    </div>
                <%})%>
            </div>
        </div>
    </main>

    <!--========== MAIN JS ==========-->
    <script src="/js/main.js"></script>
</body>
</html>