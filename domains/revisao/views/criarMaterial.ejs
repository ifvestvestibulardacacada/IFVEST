<!DOCTYPE html>
<html lang="en">

<head>
    <!--========== CSS ==========-->
    <script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>
    <link rel="stylesheet" href="/css/revisao/criar_material.css">
<%- include('./editorPath') %>

    <title>Criar Material - Módulo de Revisão de Conteúdo - IFVest</title>
</head>

<body>
    <main>
        <h1>Criar Material</h1>
        <p style="display: none;"></p>

        <div class="form-container">
            <form id="materialForm">
                <!-- Título -->
                <div class="form-group">
                    <label for="materialTitulo">Título do Material</label>
                    <input type="text" class="form-control" id="materialTitulo"
                        placeholder="Ex: Introdução ao Trovadorismo">
                </div>

                <!-- Seletores de Assunto -->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="selectAssunto">Assunto</label>
                        <select id="selectAssunto" class="form-control">
                            <option value="">Selecione uma opção
                            </option>
                            <% Assuntos.forEach(assunto=> { %>
                                <option value="<%= assunto.id_assunto %>">
                                    <%= assunto.nome %>
                                </option>
                                <% }); %>
                        </select>
                    </div>
                </div>

                <div class="d-flex flex-column">

                    <div class="d-flex align-items-end mb-3">
                        <div class="col-md-8 pe-2">
                            <label for="palavrasChave" class="form-label">Palavras-chave</label>
                            <input type="text" class="form-control" id="palavrasChave" list="palavrasChaveList"
                                placeholder="trovador, cantigas, vassalagem">
                            <datalist id="palavrasChaveList"></datalist>
                        </div>
                        <div class="col-md-4">
                            <button type="button" class="btn btn-primary" onclick="addKeyword()">Adicionar
                                palavra-chave</button>
                        </div>
                    </div>
                    <div class="tag-box w-100">

                    </div>
                </div>

                <!-- Editor Markdown -->
                <div class="form-group">
                    <label for="markdownEditor">Conteúdo do Material (Markdown)</label>
                    <div id="editor"></div>
                </div>
                <!-- Materiais Externos -->
                <div class="form-group">
                    <label for="linksExternos">Referências (um texto e um link)</label>
                    <div id="link"></div>
                </div>
                <br>

                <button type="button" id="submitButton" class="btn btn-primary w-100">Criar Material</button>
            </form>
        </div>
    </main>
    <script>
        window.Assunto = <%- JSON.stringify(Assuntos || []) %>;
        window.palavrasChave = <%- JSON.stringify(palavrasChave) %>;

        console.log( <%- JSON.stringify(cssPaths || []) %>)
        console.log( <%- JSON.stringify(jsPath || '') %>)
    </script>

    <!--========== MAIN JS ==========-->
    <script src="/revisao/js/criar_material.js"></script>
    <script src="/js/handlers/criarMaterialHandler.js"></script>
    <script src="/js/validations/validate.js"></script>
</body>

</html>