<title>Editar Material - Módulo de Revisão de Conteúdo - IFVest</title>

<script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>
<link rel="stylesheet" href="/css/revisao/criar_material.css">
<%- include('./editorPath') %>
    <main>
        <h1>Editar Material</h1>
        <p style="display: none;"></p>

        <div class="form-container">
            <form id="materialForm">
                <!-- Hidden Material ID -->
                <input type="hidden" id="materialId" value="<%= Material.id_material %>">

                <!-- Título -->
                <div class="form-group">
                    <label for="materialTitulo">Título do Material</label>
                    <input type="text" class="form-control" id="materialTitulo" value="<%= Material.nome %>">
                </div>

                <!-- Seletores de Assunto -->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="selectAssunto">Assunto</label>
                        <select id="selectAssunto" class="form-control">
                            <option value="">Selecione uma opção
                            </option>
                            <% Assuntos.forEach(assunto=> { %>
                                <option value="<%= assunto.id_assunto %>">
                                    <%= assunto.nome %>
                                </option>
                                <% }); %>
                        </select>
                    </div>
                </div>

                <!-- Palavras-chave -->
                <div class="form-row keyword-field align-items-end">
                    <div class="form-group col-md-8">
                        <label for="palavrasChave">Palavras-chave</label>
                        <input type="text" class="form-control" id="palavrasChave"
                            placeholder="trovador, cantigas, vassalagem">
                    </div>
                    <div class="form-group col-md-4">
                        <button type="button" class="btn btn-primary" onclick="addKeyword()">Adicionar
                            palavra-chave</button>
                    </div>
                    <div class="form-group tag-box"></div>
                </div>

                <div id="editor"></div>


                <button type="button" id="submitButton" class="btn btn-primary w-100">Salvar Alterações</button>
            </form>
        </div>
    </main>


    <script>
        // Server-side data passed to client
        
        window.Assunto = <%- JSON.stringify(Assuntos || []) %>;
        window.Material = <%- JSON.stringify(Material || {}) %>;

        window.addEventListener('editorContentChange', (event) => {
            window.editorContent = event.detail.content;
        });
        window.addEventListener('referenceContentChange', (event) => {
            window.referenceContent = event.detail.content;
        });
        // Initialize tags with provided keywords

    </script>


    <script src="/revisao/js/editar_material.js"></script>
    <script src="/revisao/js/handlers/editarMaterialHandler.js"></script>
    <script src="/js/validations/validate.js"></script>