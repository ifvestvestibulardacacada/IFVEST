<title>
    <%= (Material && Material.nome) ? 'Editar Material' : 'Criar Material' %> - Módulo de Revisão de Conteúdo - IFVest
</title>
<%- include('./editorPath') %>
    <script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>

    <link rel="stylesheet" href="/revisao/css/subjectTree.css">
    <link rel="stylesheet" href="/revisao/css/editor.css">
    <script src="/revisao/js/subjectTree.js" defer></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <main class="my-5">
        <h1 style="text-align: center;">
            <%= (Material && Material.nome) ? 'Editar Material' : 'Criar Material' %>
        </h1>

        <div class="form-container">
            <form id="materialForm" class="row">
                <!-- Hidden Material ID -->
                <input type="hidden" id="materialId"
                    value="<%= Material && Material.id_material ? Material.id_material : '' %>">

                <!-- Título -->
                <div class="col-md-8 form-group mb-3">
                    <label for="materialTitulo">Título do Material</label>
                    <input type="text" class="form-control" id="materialTitulo"
                        value="<%= Material && Material.nome ? Material.nome : '' %>"
                        placeholder="O nome do seu material vai aqui!">
                </div>

                <!-- Seletores de Assunto -->
                <div class="form-group col-lg-6 mb-3">

                    <label for="selected_subject_id">Assunto</label>
                    <!-- O valor selecionado irá aqui -->
                    <input type="hidden" name="id_assunto" id="selected_subject_id">

                    <!-- Apenas para mostrar o nome selecionado -->
                    <div class="selection-display">
                        <strong>Selecionado:</strong>
                        <span id="selected_subject_name">Nenhum</span>
                    </div>

                    <!-- O container da árvore -->
                    <div class="tree-container" id="subject-tree">
                        <%- include('./_subjectTree', { subjects: Assuntos }) %>
                    </div>
                </div>
                <div class="col-lg-6 mb-3">
                    <label for="palavrasChave">Palavras-chave</label>
                    <div class="input-group">
                        <input type="text" class="form-control m-0" id="palavrasChave" list="palavrasChaveList"
                            placeholder="trovador, cantigas, vassalagem">
                        <button type="button" class="btn btn-primary" id="addKeywordBtn">Adicionar</button>
                    </div>
                    <datalist id="palavrasChaveList"></datalist>
                    <div class="form-group tag-box"></div>
                </div>

                <!-- Editor Markdown -->
                <div class="form-group mb-3">
                    <label for="markdownEditor">Conteúdo do Material (Markdown)</label>
                    <div id="editor"></div>
                </div>

                <!-- Materiais Externos (mini-form) -->
                <div class="form-group mb-3">
                    <label>Materiais Externos</label>

                    <div class="external-header row align-items-start gx-1">
                        <div class="col-lg-5 mb-2">
                            <input type="text" id="externalName" class="form-control"
                                placeholder="Nome do material (ex: Aula 1)">
                        </div>
                        <div class="col-lg-5 mb-2">
                            <input type="text" id="externalLink" class="form-control"
                                placeholder="Link do material (https://...)">
                        </div>
                        <div class="d-flex flex-row gap-1 col-xl-2 mb-2">
                            <button type="button" id="addExternalBtn" class="btn btn-outline-primary">Adicionar</button>
                            <button type="button" id="uploadExternalBtn" class="btn btn-success">Upload</button>
                        </div>
                    </div>

                    <small class="text-muted d-block mt-1">Ao adicionar, o material aparecerá abaixo com opções de
                        editar e remover.</small>

                    <!-- Lista de materiais externos -->
                    <div id="externalList" class="mt-3"></div>

                    <!-- hidden file input for upload modal/flow -->
                    <input type="file" id="externalFileInput" style="display:none" />
                </div>

                <div class="d-grid gap-2">
                    <button type="button" id="submitButton" class="btn btn-primary">
                        <%= (Material && Material.nome) ? 'Salvar Alterações' : 'Criar Material' %>
                    </button>
                </div>

            </form>
        </div>
    </main>




    <script>
        const ContentManager = (() => {
            let editorContent = '';
            const Material = <%- JSON.stringify(Material || {}) %>;
            const PalavrasChave = <%- JSON.stringify(typeof palavrasChave !== 'undefined' ? palavrasChave : []) %>;

            const handleEditorChange = (event) => {
                if (event?.detail?.content != null) {
                    editorContent = event.detail.content;
                }
            };

            window.addEventListener('editorContentChange', handleEditorChange);


            return {
                getMaterial: () => [Material],
                getEditorContent: () => editorContent,
                getConteudoMarkdown: () => Material.conteudo_markdown,
            };
        })();

        window.ContentManager = ContentManager;
        // Server-side data passed to client
        window.Assunto = <%- JSON.stringify(Assuntos || []) %>;
        window.PalavrasChave = <%- JSON.stringify(typeof palavrasChave !== 'undefined' ? palavrasChave : []) %>;
        const assunto = <%- JSON.stringify(assunto || {}) %>;
        const palavraChave =<%- JSON.stringify(Material.PalavraChave || {}) %>;
        window.Material = window.ContentManager.getMaterial();
        window.MaterialExterno = <%- JSON.stringify(typeof MaterialExterno !== 'undefined' ? MaterialExterno : []) %>;

        // MODE: if backend did not provide, infer from Material presence
        window.MODE = window.Material && window.Material.id_conteudo ? 'edit' : 'create';
       
           
        
    </script>

    <script src="/revisao/js/editor_material.js"></script>
    <script src="/revisao/js/handlers/editorMaterialHandler.js"></script>
    <script src="/js/validations/validate.js"></script>