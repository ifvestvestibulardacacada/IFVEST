<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Associar Questões ao Simulado - IFVest</title>

    <%- include('../partials/libs') %>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <link rel="stylesheet" href="/simulados/css/simulado/associarquestoes.css">
        <style>

        </style>
</head>

<body>
    <div class="container col-lg-10 mx-auto my-4">
        <!-- Mensagem de erro -->
        <% if (typeof errorMessage !=='undefined' && errorMessage.trim()) { %>
            <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <div>
                    <%= errorMessage %>
                </div>
            </div>
            <% } %>

                <!-- Título -->
                <h1 class="border-bottom pb-2 mb-4">Associar Questões</h1>
                <p class="text-muted mb-4"><strong>Simulado:</strong>
                    <%= simulado.titulo %>
                </p>

                <!-- Contadores de questões por área -->
                <div class="badges-container">
                    <strong>Questões já associadas por área:</strong>
                    <% Object.entries(questoesPorArea).forEach(([areaId, count])=> { %>
                        <% const area=Areas.find(a=> a.id_area === Number(areaId)); %>
                            <% if (area) { %>
                                <span class="badge bg-primary">
                                    <%= area.nome %>: <%= count %>
                                </span>
                                <% } %>
                                    <% }); %>
                </div>

                <!-- Formulário de filtros -->
                <div class="filter-container">
                    <form method="GET" action="/simulados/<%= simulado.id_simulado %>/adicionar-questoes"
                        class="row g-3 align-items-end">
                        <div class="col-md-4">
                            <label for="titulo" class="form-label">Buscar por título</label>
                            <input type="text" id="titulo" name="titulo" placeholder="Filtrar por título"
                                class="form-control" value="<%= typeof titulo !== 'undefined' ? titulo : '' %>">
                        </div>
                        <div class="col-md-3">
                            <label for="areaId" class="form-label">Área</label>
                            <select id="areaId" name="areaId" class="form-select">
                                <option value="">Todas as áreas</option>
                                <% Areas.forEach(area=> { %>
                                    <option value="<%= area.id_area %>" <%=(typeof areaId !=='undefined' &&
                                        areaId==area.id_area) ? 'selected' : '' %>>
                                        <%= area.nome %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="topicosSelecionados" class="form-label">Tópico</label>
                            <select id="topicosSelecionados" name="topicosSelecionados" class="form-select">
                                <option value="">Todos os tópicos</option>
                                <% topicos.forEach(topico=> { %>
                                    <option value="<%= topico.id_topico %>" <%=(typeof topicosSelecionados
                                        !=='undefined' && topicosSelecionados==topico.id_topico) ? 'selected' : '' %>>
                                        <%= topico.nome %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-search"></i> Filtrar
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Contador de questões selecionadas -->
                <div id="contador-questoes-selecionadas" class="contador-questoes">
                    Questões Selecionadas: <span id="numero-questoes-selecionadas">0</span>
                </div>

                <!-- Formulário principal -->
                <form id="form-associar" action="/simulados/<%= simulado.id_simulado %>/adicionar-questoes"
                    method="POST">
                  
  <%- include('../partials/contentTable') %>

                    <!-- Paginação -->
                  
                  

                    <!-- Botões -->
                    <div class="button-container">
                        <a href="/simulados/meus-simulados" class="btn btn-voltar btn-lg">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                        <button type="submit" id="submitButton" class="btn btn-success btn-lg"
                            onclick="return confirm('Deseja associar as questões selecionadas ao simulado?')">
                            <i class="bi bi-link-45deg"></i> Associar Questões Selecionadas
                        </button>
                    </div>
                </form>
    </div>

    <!-- Scripts -->
    <script src="/js/main.js"></script>
    <script src="/simulados/js/simulado/associarpergunta.js"></script>
    <script src="/simulados/js/handlers/associarQuestaoHandler.js"></script>
    <script src="/simulados/js/validate.js"></script>
    <%- include('../partials/ContentManager') %>

    
</body>

</html>