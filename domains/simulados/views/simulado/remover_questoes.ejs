<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
  <link rel="stylesheet" href="/css/professor/minhasquestoes.css">
  <%- include('../partials/quill_and_uikit') %>
  <title>Remover Questões - IFVest</title>
</head>
<body>

  <!--========== CONTENTS ==========-->

  <% if (typeof errorMessage !== 'undefined' && errorMessage.trim()) { %>
    <script>
      window.onload = function() {
        alert("<%= errorMessage %>");
      };
    </script>
  <% } %>

  <h1 class="uk-heading-divider">REMOVER QUESTÕES</h1>

  <form action="/simulados/<%= simulado.id_simulado %>/remover-questoes" method="GET">
    <!-- Campo de filtragem por título -->
    <label for="titulo" class="sr-only">Filtrar por título</label>
    <input type="text" id="titulo" name="titulo" placeholder="Filtrar por título">
    <button type="submit" aria-label="Pesquisar por título">
      <i class='bx bx-search' aria-hidden="true"></i>Pesquisar
    </button>
  </form>

  <form action="/simulados/<%= simulado.id_simulado %>/remover-questoes?_method=DELETE" method="POST">
    <div class="table-responsive">
      <table class="table-container">
        <caption class="sr-only">Tabela de questões disponíveis para remoção</caption>
        <thead>
          <tr>
            <th scope="col">Selecionar</th>
            <th scope="col">Título</th>
            <th scope="col">Tipo</th>
            <th scope="col">Questão</th>
          </tr>
        </thead>
        <tbody>
          <% questoes.forEach(questao => { %>
            <tr>
              <td>
                <input
                  type="checkbox"
                  id="questao-<%= questao.id_questao %>"
                  name="questoesSelecionadas"
                  value="<%= questao.id_questao %>"
                  aria-labelledby="titulo-<%= questao.id_questao %> tipo-<%= questao.id_questao %> pergunta-<%= questao.id_questao %>"
                  title="Selecionar questão <%= questao.titulo %>"
                >
              </td>
              <td id="titulo-<%= questao.id_questao %>"><%= questao.titulo %></td>
              <td id="tipo-<%= questao.id_questao %>"><%= questao.tipo %></td>
              <td id="pergunta-<%= questao.id_questao %>">
                <div class="name" data-delta='<%= questao.pergunta %>'>
                  <span class="required" aria-hidden="true">*</span>
                </div>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <div class="pagination-container" aria-label="Paginação">
      <% if (page > 1) { %>
        <a href="?page=<%= page - 1 %>" rel="prev">Anterior</a>
      <% } %>
      <% for (let i = 1; i <= totalPages; i++) { %>
        <a
          href="?page=<%= i %>"
          class="<%= page === i ? 'active' : '' %>"
          <% if (page === i) { %>aria-current="page"<% } %>
        ><%= i %></a>
      <% } %>
      <% if (page < totalPages) { %>
        <a href="?page=<%= page + 1 %>" rel="next">Próximo</a>
      <% } %>
    </div>

    <input type="hidden" name="simuladoId" value="<%= simulado.id_simulado %>">
    <button type="submit" id="submitButton">Remover Questões</button>
  </form>

  <script src="/js/main.js"></script>
  <script src="/js/professor/quillContentHtmlTable.jsable.js"></script>
  <script src="/js/validations/validate.js"></script>
</body>
</html>

                                            

                    