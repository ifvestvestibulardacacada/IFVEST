<!DOCTYPE html>
<html lang="en">

<head>
    <title>Gabarito - IFVest</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link rel="stylesheet" href="/simulados/css/global.css">
    
   
    
    <link rel="stylesheet" href="/simulados/css/prova/gabarito.css">
    
    <%- include('../partials/libs') %>
</head>

<body>
    
    <main class="container mt-5 pt-4"> <% if (typeof errorMessage !=='undefined' && errorMessage.trim()) { %>
            <script>
                window.onload = function () {
                    alert("<%= errorMessage %>");
                };
            </script>
        <% } %>
        
        <div class="row">
            <div class="col-lg-10 col-xl-9 mx-auto"> <div class="bg-white p-4 rounded-top shadow-sm border-bottom">
                    <h1 class="h3 mb-0">Gabarito: Teste <%= simulado.tipo %></h1>
                </div>

                <% if (typeof totalAcertos !== 'undefined' && typeof totalQuestoes !== 'undefined') { %>
                    <div class="bg-light p-3 p-md-4 rounded-bottom shadow-sm mb-4">
                        <h3 class="h5">Seu Desempenho</h3>
                        <p class="fs-6 mb-2">
                            Você acertou <strong><%= totalAcertos %></strong> de
                            <strong><%= totalQuestoes %></strong> questões objetivas.
                        </p>
                        <% const percentual = (totalQuestoes > 0 ? (totalAcertos / totalQuestoes * 100) : 0).toFixed(0); %>
                        
                        <div class="progress" role="progressbar" aria-label="Percentual de acerto" aria-valuenow="<%= percentual %>" aria-valuemin="0" aria-valuemax="100" style="height: 25px;">
                            <div class="progress-bar bg-success" style="width: <%= percentual %>%;">
                                <%= percentual %>%
                            </div>
                        </div>
                    </div>
                <% } %>


                <% questoes.forEach((questao, qIndex) => { %>
                    
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="card-title mb-0 text-primary">
                                <%= questao.titulo %> </h5>
                        </div>
                        
                        <div class="card-body">
                            <div class="name" data-delta='<%= questao.pergunta %>'>
                                </div>

                            <% if (questao.tipo === "OBJETIVA") { %>
                                <% const respostaUsuario = respostasUsuario.find(r => r.id_questao === questao.id_questao); %>
                                
                                <ul class="list-group list-group-flush mt-3">
                                    <% questao.Opcao.forEach((opcao, index) => { %>
                                        
                                        <% 
                                          // Lógica para definir as classes do item
                                          let itemClasses = 'list-group-item d-flex align-items-center';
                                          const isCorreta = opcao.correta === true;
                                          const isSelecionada = respostaUsuario && respostaUsuario.Opcao.id_opcao === opcao.id_opcao;

                                          if (isCorreta) {
                                            // É a correta: verde
                                            itemClasses += ' list-group-item-success';
                                          } else if (isSelecionada && !isCorreta) {
                                            // É a que o usuário marcou, e está errada: vermelha
                                            itemClasses += ' list-group-item-danger';
                                          } else {
                                            // Opção neutra
                                            itemClasses += ' list-group-item-light';
                                          }
                                        %>

                                        <li class="<%= itemClasses %>">
                                            <input class="form-check-input me-3" 
                                                   type="radio" 
                                                   name="radio-<%= qIndex %>" 
                                                   id="opcao-<%= opcao.id_opcao %>"
                                                   <% if (isSelecionada) { %>checked<% } %>
                                                   disabled>

                                            <label class="fw-bold me-2" for="opcao-<%= opcao.id_opcao %>">
                                                <%= opcao.alternativa %>)
                                            </label>

                                            <div class="opcao-texto" data-delta="<%= opcao.descricao %>">
                                                </div>
                                        </li>
                                    <% }); %>
                                </ul>

                            <% } else { %>
                                
                                <div class="card bg-primary-subtle text-primary-emphasis border-primary mt-3">
                                    <div class="card-header fw-bold">
                                        <i class="bi bi-check-circle-fill"></i> Resposta Oficial
                                    </div>
                                    <div class="card-body">
                                        <% questao.Opcao.forEach(opcao => { %>
                                            <div class="opcao-texto" data-delta='<%= opcao.descricao %>'>
                                                 </div>
                                        <% }) %>
                                    </div>
                                </div>

                                <% const respostaDissertativa = respostasDissertativas.find(r => r.id_questao === questao.id_questao); %>
                                <% if (respostaDissertativa) { %>
                                    <div class="card bg-light-subtle mt-3">
                                        <div class="card-header fw-bold">
                                            <i class="bi bi-person-fill"></i> Sua Resposta
                                        </div>
                                        <div class="card-body">
                                            <p class="card-text"><%= respostaDissertativa.resposta %></p>
                                        </div>
                                    </div>
                                <% } %>
                                
                            <% } %>
                        </div>
                    </div>
                <% }) %>

            </div>
        </div>
    </main>
    
    <script src="/js/main.js"></script>
    <script src="/js/prova/gabarito.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
</html>