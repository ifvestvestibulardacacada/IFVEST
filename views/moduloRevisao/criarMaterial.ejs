<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--========== BOX ICONS ==========-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">

    <!--========== CSS ==========-->
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/usuario/card.css">
    <link rel="stylesheet" href="/css/usuario/Botão.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/revisao/criar_material.css">
    <script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>


    <title>Buscar área - Módulo de Revisão de Conteúdo - IFVest</title>
</head>

<body>
    <%- include('../partials/sidebar') %>
        <main>
            <h1>Criar Material</h1>
            <p style="display: none;"></p>

            <div class="form-container">
                <form id="materialForm">
                    <!-- Título -->
                    <div class="form-group">
                        <label for="materialTitulo">Título do Material</label>
                        <input type="text" class="form-control" id="materialTitulo"
                            placeholder="Ex: Introdução ao Trovadorismo">
                    </div>

                    <!-- Seletores de Área e Tópico -->
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="selectArea">Área</label>
                            <select id="selectArea" class="form-control">
                                <option value="">Selecione uma opção
                                </option>
                                <% Areas.forEach(area=> { %>
                                    <option value="<%= area.id_area %>">
                                        <%= area.nome %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="selectTopico">Tópico</label>
                            <select id="selectTopico" class="form-control">
                                <option selected>Escolha a área primeiro...</option>

                            </select>
                        </div>
                    </div>

                    <div class="form-row keyword-field align-items-end">
                        <!-- Palavras-chave -->
                        <div class="form-group col-md-8">
                            <label for="palavrasChave">Palavras-chave</label>
                            <input type="text" class="form-control" id="palavrasChave" list="palavrasChaveList"
                                placeholder="trovador, cantigas, vassalagem">
                            <datalist id="palavrasChaveList"></datalist>
                        </div>

                        <div class="form-group col-md-4">
                            <button type="button" class="btn btn-primary" onclick="addKeyword()">Adicionar
                                palavra-chave</button>
                        </div>

                        <div class="form-group tag-box">

                        </div>
                    </div>

                    <!-- Editor Markdown -->
                    <div class="form-group">
                        <label for="markdownEditor">Conteúdo do Material (Markdown)</label>
                        <iframe id="myIframe" frameborder="0" width="100%" src="/editor" height="450"></iframe>
                        <!-- <textarea class="form-control" id="markdownEditor" rows="10"></textarea> -->
                    </div>
                    <!-- Materiais Externos -->
                    <div class="form-group">
                        <label for="linksExternos">Links Externos (um por linha)</label>
                        <textarea class="form-control" id="linksExternos" rows="3"
                            placeholder="https://www.youtube.com/watch?v=...&#10;https://www.todamateria.com.br/..."></textarea>
                    </div>

                    <button type="button" id="submitButton" class="btn btn-primary w-100">Criar Material</button>
                </form>
            </div>
        </main>
        <script>
            window.Areas = <%- JSON.stringify(Areas || []) %>;
            window.Topicos = <%- JSON.stringify(topicos || []) %>;
            window.palavrasChave = <%- JSON.stringify(palavrasChave) %>;
            
            window.addEventListener('beforeunload', () => {
                localStorage.removeItem('EditorContent');
            });

            document.addEventListener('click', (event) => {
                const target = event.target.closest('a');
                if (target && target.href && !target.href.startsWith(window.location.href)) {
                    // Clear localStorage when clicking a link that navigates to a different page
                    localStorage.removeItem('EditorContent');
                }
            });
        </script>

        <!--========== MAIN JS ==========-->
        <script src="/js/revisao/criar_material.js"></script>
        <script src="/js/handlers/criarMaterialHandler.js"></script>
</body>

</html>